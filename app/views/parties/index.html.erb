<div id='form-header'><span id='all-content'>Parties!</span></div>

<table class='index-table'>
  <thead>
    <tr>
      <th>Theme</th>
      <th>Location</th>
      <th>When held</th>
      <th>Host</th>
      <th>Host email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= party.theme %></td>
        <td><%= party.location %></td>
        <td><%= party.when_held %></td>
        <td><%= party.host %></td>
        <td><%= party.host_email %></td>
        <td><%= link_to 'Show', party %></td>
        <td><%= link_to 'Edit', edit_party_path(party) %></td>
        <td><%= link_to 'Destroy', party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% party.guests.each do |guest| %>
      <tr class='guest-row'>
        <td></td>
        <td><%= guest.name %></td>
        <td><%= guest.email %></td>
        <td><%= guest.rsvp ? 'confirmed' : 'waitingâ€¦' %></td>
        <td></td>
        <td><%= link_to "Show", controller: "guests", action: "show", id: guest %></td>
        <td></td>
        <td></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

