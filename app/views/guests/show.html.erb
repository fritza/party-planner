<%= name_markup @guest.name %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @guest.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @guest.email %>
</p>

<p>
  <strong>Rsvp:</strong>
  <%= @guest.rsvp %>
</p>

<p>
  <strong>Party:</strong>
  <% if @guest.party %>
    <%= @guest.party.human_name %>
  <% else %>
    (none!)
  <% end %>
</p>

<%= link_to 'Edit', edit_guest_path(@guest) %> |
<%= link_to 'Back', guests_path %>
